<body>
    <div class="login-container">
        <h1>Starblast.io Giriş</h1>
        <input type="text" id="username" placeholder="Kullanıcı Adı" required><br>
        <input type="password" id="token" placeholder="Token" required><br>
        <button onclick="login()">Giriş Yap</button>
        <p id="error-message" style="color: red;"></p>
    </div>

    <script>
        function login() {
            const validTokens = ['KSJDA9', 'UFDAS2']; // Geçerli tokenler
            const validUsername = 'Zaxie'; // Geçerli kullanıcı adı
            const username = document.getElementById('username').value;
            const token = document.getElementById('token').value;
            const errorMessage = document.getElementById('error-message');

            if (validUsername === username && validTokens.includes(token)) {
                // Geçerli kullanıcı adı ve token, oyunu başlat
                errorMessage.textContent = '';
                alert('Giriş başarılı! Oyun başlıyor...');
                // Buraya oyunun başlama kodlarını ekleyin
            } else {
                // Geçersiz kullanıcı adı veya token, hata mesajı göster
                errorMessage.textContent = 'Geçersiz kullanıcı adı veya token, lütfen tekrar deneyin.';
            }
        }
    </script>
</body>
